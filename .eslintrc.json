{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "eqeqeq": "error",
        "strict": "error",     
        "no-var": "error",
        "prefer-const": "error",
        "no-console": "off",
        "indent": [
            "error",
            2  
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",            
            "single",            
            "avoid-escape"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
